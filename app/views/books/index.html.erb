<html>


<body>
 <% if @book.errors.any? %>
  "error"
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
 <% end %>

 <p id="notice"></p>
 <h1>Books</h1>

 <table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
   <% @books.each do |book| %>
      <tr>
       <td class="title">
        <span><%= book.title %></span>
       </td>
       <td class="body">
        <span><%= book.body %></span>
       </td>
       <td class="3">
        <%= link_to "Show", book_path(book) %>
        <%= link_to "Edit", edit_book_path(book) %>
        <%= link_to "Destroy", book_path(book), method: :delete %>
       </td>
      </tr>
   <% end %>
 </tbody>
 </table>


 <h2>New book</h2>
 <%= form_with model:@book, url:'/books', local:true do |f| %>

 <div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
 </div>


 <div class="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
 </div>


 <div class="actions">
  <%= f.submit 'Create Book' %>
 </div>

 <% end %>

</body>

</html>